{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./renderer/app/**/*.ts",
    "!./renderer/app/**/module.ts"
  ],
  "coverageReporters": ["json-summary", "text", "html"],
  "preset": "jest-preset-angular",
  "reporters": [
    "default",
    [
      "jest-junit",
      {
        "outputDirectory": "./reports/junit"
      }
    ]
  ],
  "roots": ["<rootDir>/renderer"],
  "setupFilesAfterEnv": [
    "jest-extended/all",
    "jest-preset-angular",
    "zone.js",
    "zone.js/testing",
    "<rootDir>/renderer/test.ts"
  ],
  "testMatch": ["**/+(*.)+(spec).+(ts)"],
  "testResultsProcessor": "jest-junit",
  "transform": {
    "^.+\\.tsx?$": [
      "jest-preset-angular",
      {
        "tsconfig": "<rootDir>/renderer/tsconfig.spec.json"
      }
    ]
  }
}
