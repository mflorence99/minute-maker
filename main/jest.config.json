{
  "collectCoverage": true,
  "collectCoverageFrom": ["<rootDir>/app/**/*.ts", "!<rootDir>/app/preload.ts"],
  "coverageReporters": ["json-summary", "text"],
  "preset": "ts-jest",
  "roots": ["<rootDir>/"],
  "setupFilesAfterEnv": ["jest-extended/all"],
  "testMatch": ["**/+(*.)+(spec).+(ts)"],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "<rootDir>/tsconfig.spec.json"
      }
    ]
  }
}
