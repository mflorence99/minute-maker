{
  "collectCoverage": true,
  "collectCoverageFrom": ["<rootDir>/app/**/*.ts", "!<rootDir>/app/module.ts"],
  "coverageReporters": ["json-summary", "text"],
  "moduleNameMapper": {
    "^#mm/common$": "<rootDir>/app/common.ts",
    "^#mm/components/(.*)$": "<rootDir>/app/components/$1",
    "^#mm/environment$": "<rootDir>/app/environment.ts",
    "^#mm/module$": "<rootDir>/app/module.ts",
    "^#mm/package$": "<rootDir>/../package.json",
    "^#mm/pages/(.*)$": "<rootDir>/app/pages/$1",
    "^#mm/services/(.*)$": "<rootDir>/app/services/$1",
    "^#mm/state/(.*)$": "<rootDir>/app/state/$1",
    "^#mm/utils$": "<rootDir>/app/utils.ts"
  },
  "preset": "jest-preset-angular",
  "roots": ["<rootDir>/"],
  "setupFilesAfterEnv": [
    "jest-extended/all",
    "jest-preset-angular",
    "zone.js",
    "zone.js/testing",
    "<rootDir>/test.ts"
  ],
  "testMatch": ["**/+(*.)+(spec).+(ts)"],
  "transform": {
    "^.+\\.tsx?$": [
      "jest-preset-angular",
      {
        "tsconfig": "<rootDir>/tsconfig.spec.json"
      }
    ]
  }
}
